# Docker Environment Variables
# Use these when running services in containers

# gRPC Server Configuration
GRPC_PORT=50051

# Kafka Configuration (Docker internal network)
KAFKA_BROKER=kafka:9092
KAFKA_TOPIC=telemetry-raw
KAFKA_ALERT_TOPIC=telemetry-alerts

# Worker Configuration
WORKER_POOL_SIZE=10

# InfluxDB Configuration (Docker internal network)
INFLUXDB_URL=http://influxdb:8086
INFLUXDB_TOKEN=voltstream-token-2024
INFLUXDB_ORG=voltstream
INFLUXDB_BUCKET=telemetry

# Simulator Configuration
NUM_VEHICLES=1000
SEND_FREQUENCY_HZ=10
